class Solution {
public:
    int trap(vector<int>& h) {
        int n=h.size();
        if(n<3) return 0;
        int maxl[n],maxr[n];
        maxl[0]=h[0];
        for(int i=1;i<n;i++)
        {
            maxl[i]=max(maxl[i-1],h[i]);
        }
        maxr[n-1]=h[n-1];
        for(int i=n-2;i>=0;i--)
        {
            maxr[i]=max(maxr[i+1],h[i]);
        }
        int sum=0;
        for(int i=0;i<n;i++)
        {
            maxl[i]=min(maxl[i],maxr[i])-h[i];
            sum+=maxl[i];
        }
        return sum;
    }
};
