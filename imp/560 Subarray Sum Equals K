class Solution {
public:
    int subarraySum(vector<int>& nums, int k) {
        
        int n=nums.size();
        if(n==0 ) return 0;
        if(n==1&&nums[0]!=k) return 0;
        else if(n==1&&nums[0]==k) return 1;
        int ans=0;
        unordered_map<int,int> m;
        m[0]++;int prevsum=0;
        for(int i=0;i<n;i++)
        {
            prevsum+=nums[i];
            
            int el=prevsum-k;
            if(m[el]>0)
                ans+=m[el];
            m[prevsum]++;
        }
        return ans;
    }
};
