class Solution {
public:
    static bool compare(const vector<int>& a,vector<int>& b)
    {
        if(a[0]==b[0])
            return a[1]<b[1];
        return a[0]<b[0];
    }
    bool checkStraightLine(vector<vector<int>>& coordinates) {
        if(coordinates.size()==2) return true;
        sort(coordinates.begin(),coordinates.end(),compare);
        int diffx=abs(coordinates[1][0]-coordinates[0][0]);
        if(diffx==0)
        {
            for(int i=2;i<coordinates.size();i++)
            {
                    if(coordinates[i][0]-coordinates[i-1][0]!=0) return false;
            }
            return true;
                
        }
        
        int diffy=abs(coordinates[1][1]-coordinates[0][1]);
        if(diffy==0)
        {
            for(int i=2;i<coordinates.size();i++)
            {
                if(coordinates[i][1]-coordinates[i-1][1]!=0) return false;
            } 
            return true;
             
        }
        
        float slope=float(diffy)/float(diffx);   
        for(int i=2;i<coordinates.size();i++)
        {
            
           if(coordinates[i][1]-coordinates[i-1][1]==0||coordinates[i][0]-coordinates[i-1][0]==0)
               return false;
            float s=float(abs(coordinates[i][1]-coordinates[i-1][1]))/float(abs(coordinates[i][0]-coordinates[i-1][0]));cout<<s<<" "<<slope;
            if(s!=slope) return false;
        }
        return true;
    }
};
