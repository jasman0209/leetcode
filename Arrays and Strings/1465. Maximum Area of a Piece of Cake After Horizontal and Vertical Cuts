#define MOD 1000000007
class Solution {
public:
    int maxArea(int h, int w, vector<int>& hc, vector<int>& vc) {
        
       sort(hc.begin(),hc.end());
        sort(vc.begin(),vc.end());
        hc.insert(hc.begin(),0);
        hc.push_back(h);
        vc.insert(vc.begin(),0);
        vc.push_back(w);
        int maxh=INT_MIN,maxw=INT_MIN;
        for(int i=0;i<hc.size()-1;i++) maxh=max(maxh,hc[i+1]-hc[i]);
        for(int i=0;i<vc.size()-1;i++) maxw=max(maxw,vc[i+1]-vc[i]);
        return ((long long)(maxh%MOD)*(maxw%MOD))%MOD;
    }
};
