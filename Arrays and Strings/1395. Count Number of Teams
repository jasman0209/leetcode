class Solution {
public:
    int numTeams(vector<int>& rating) {
        int n=rating.size();
        int ans=0;
        for(int i=0;i<n;i++)
        {
            int ls=0,rs=0,lg=0,rg=0;
            for(int j=0;j<i;j++)
            {
                if(rating[i]<rating[j])
                    ls++;
                if(rating[i]>rating[j])
                    lg++;
                
            }
            for(int j=i+1;j<n;j++)
            {
                if(rating[i]<rating[j])
                    rs++;
                if(rating[i]>rating[j])
                    rg++;
                
            }
            ans+=rs*lg+ls*rg;
        }
        return ans;
    }
};
