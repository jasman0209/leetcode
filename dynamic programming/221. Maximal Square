class Solution {
public:
    int maximalSquare(vector<vector<char>>& matrix) {
        if(matrix.empty()) return 0;
        
        int n=matrix.size(),m=matrix[0].size();
        
        int dp[n][m];
        memset(dp,0,sizeof(dp));
        int ma=0;
        for(int i=0;i<m;i++) {dp[0][i]=matrix[0][i]-'0'; ma=max(dp[0][i],ma);}
        for(int i=0;i<n;i++) {dp[i][0]=matrix[i][0]-'0';ma=max(dp[i][0],ma);}
        
        for(int i=1;i<n;i++)
        {
            for(int j=1;j<m;j++)
            {
                if(matrix[i][j]=='1')
                    dp[i][j]=min(dp[i-1][j],min(dp[i-1][j-1],dp[i][j-1]))+1;
                ma=max(dp[i][j],ma);
            }
        }
        return ma*ma;
    }
};
