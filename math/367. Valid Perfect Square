class Solution {
public:
    bool isPerfectSquare(int num) {
        for(long sum=0,i=1;sum<num&&sum<INT_MAX&&i<INT_MAX;i+=2)
        {
            if(sum+i>=INT_MAX) return false;
            sum+=i;
            
            if (sum == num) 
            return true;
        }
        return false;
    }
};
