class Solution {
public:
    int countSquares(vector<vector<int>>& matrix) {
        int n=matrix.size();
        int m=matrix[0].size();
        int dp[matrix.size()][matrix[0].size()];
        memset(dp,0,sizeof(dp));
        int count=0;
        for(int j=0;j<m;j++)
            {
                dp[0][j]=matrix[0][j];
                if(matrix[0][j]==1) count++;
            }
        for(int j=1;j<n;j++)
            {
                dp[j][0]=matrix[j][0];
                if(matrix[j][0]==1) count++;
           // cout<<"count"<<count<<endl;

            }
        for(int i=1;i<n;i++)
        {
            for(int j=1;j<m;j++)
            {
                if(matrix[i][j]==1)
                {
                    //cout<<i<<" "<<j<<endl;
                    count++;
                    int ans=min(dp[i-1][j],min(dp[i-1][j-1],dp[i][j-1]));
                    if(ans>=1) count+=ans;
                    
                    dp[i][j]=ans+1;
                }
                else
                    dp[i][j]=0;
            }          
        }
        return count;    
    }
    
};
