/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    int helper(TreeNode* root,int currentmax)
    {
        int ans=0;
        if(root==NULL) return 0;
        if(root->val>currentmax)
        {
            ans++;
            currentmax=max(currentmax,root->val);
        }
        if(root->left)
        {
            if(root->left->val>=currentmax)
                ans++;
            ans+=helper(root->left,max(currentmax,root->left->val));
        }
        if(root->right)
        {
            if(root->right->val>=currentmax)
                ans++;
            
            currentmax=max(currentmax,root->right->val);
            ans+=helper(root->right,currentmax);
        }
        
        
        
        return ans;
    }
    int goodNodes(TreeNode* root) {
        
       return helper(root,INT_MIN);
    }
};
