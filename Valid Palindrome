class Solution {
public:
    bool isPalindrome(string s) {
        string t="";
        if( s.length()==0) return true;
        for(int i=0;i<s.length();i++)
        {
            if(s[i]>=65&&s[i]<=90)
            {
                s[i]=s[i]+32;
                t+=s[i];
            }
            else if(s[i]>=97&& s[i]<=122)
            {t+=s[i];}
            else if(isdigit(s[i])) t+=s[i];
            else
            {
                
            }   
        }
        string str=t;
       reverse(str.begin(),str.end());
        return !str.compare(t);
    }
};
